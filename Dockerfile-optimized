# 优化后的Dockerfile - 移除ONNX依赖后的轻量级版本
FROM python:3.12.11-slim-bookworm AS build

ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV SET_CONTAINER_TIMEZONE=true
ENV CONTAINER_TIMEZONE=Asia/Shanghai
ENV TZ=Asia/Shanghai 

ARG TARGETARCH
ARG VERSION
ENV VERSION=${VERSION}
ENV PYTHON_IN_DOCKER='PYTHON_IN_DOCKER'

# 复制requirements.txt并安装依赖（不包含onnxruntime）
COPY ./requirements.txt /tmp/requirements.txt

# 安装系统依赖和Python包
RUN apt-get --allow-releaseinfo-change update \
    && apt-get install -y --no-install-recommends \
        jq \
        firefox-esr \
        tzdata \
        # 移除不必要的开发工具和库
    && ln -snf /usr/share/zoneinfo/$TZ /etc/localtime \
    && echo $TZ > /etc/timezone \
    && dpkg-reconfigure --frontend noninteractive tzdata \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# 创建数据目录并安装Python依赖
RUN mkdir /data \
    && cd /tmp \
    && python3 -m pip install --upgrade pip \
    && PIP_ROOT_USER_ACTION=ignore pip install \
    --disable-pip-version-check \
    --no-cache-dir \
    -r requirements.txt \
    && rm -rf /tmp/* \
    && pip cache purge \
    && rm -rf /var/lib/apt/lists/* \
    && rm -rf /var/log/*

ENV LANG=C.UTF-8

# 复制应用代码（不包含captcha.onnx模型文件）
COPY scripts/*.py /app/
WORKDIR /app

# 下载Firefox驱动
RUN OUTPUT=$(python3 firefox_driver_download.py) \
    && echo $OUTPUT \
    && mv $OUTPUT /usr/bin/geckodriver

CMD ["python3","main.py"]

