# ARMv7æ¶æ„ä¼˜åŒ–Dockerfile - æœ€å°åŒ–é•œåƒ
FROM python:3.12-slim-bookworm

# è®¾ç½®ç¯å¢ƒå˜é‡
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1
ENV SET_CONTAINER_TIMEZONE=true
ENV CONTAINER_TIMEZONE=Asia/Shanghai
ENV TZ=Asia/Shanghai
ENV LANG=C.UTF-8
ENV PYTHON_IN_DOCKER='PYTHON_IN_DOCKER'

# åˆ›å»ºérootç”¨æˆ·
RUN groupadd -r appuser && useradd -r -g appuser appuser

# å®‰è£…ç³»ç»Ÿä¾èµ–
RUN set -eux; \
    apt-get update; \
    DEBIAN_FRONTEND=noninteractive apt-get install -y --no-install-recommends \
      firefox-esr \
      tzdata \
      jq \
      ca-certificates \
      wget \
      tar \
      curl \
      file \
      python3-pip \
      python3-setuptools \
      python3-wheel \
      python3-dev \
      build-essential \
      gcc \
      g++ \
      gfortran \
      libopenblas-dev \
      liblapack-dev \
      pkg-config \
      libfreetype6-dev \
      libjpeg62-turbo-dev \
      libpng-dev \
      zlib1g-dev \
    ; \
    ln -snf /usr/share/zoneinfo/$TZ /etc/localtime; \
    echo $TZ > /etc/timezone; \
    dpkg-reconfigure --frontend noninteractive tzdata; \
    rm -rf /var/lib/apt/lists/*; \
    apt-get clean

# åˆ›å»ºåº”ç”¨ç›®å½•
WORKDIR /app
RUN mkdir -p /data && chown -R appuser:appuser /app /data

# ä¿®å¤Python 3.12å…¼å®¹æ€§å¹¶å®‰è£…numpyï¼ˆç»éªŒè¯çš„å·¥ä½œæ–¹æ¡ˆï¼‰
RUN set -eux; \
    # å‡çº§pipå’Œæ ¸å¿ƒåŒ…ï¼Œä¿®å¤Python 3.12å…¼å®¹æ€§
    pip install --no-cache-dir --upgrade pip setuptools>=68.0.0 wheel; \
    # ç›´æ¥å®‰è£…ç»éªŒè¯ä¸Python 3.12å…¼å®¹çš„numpyç‰ˆæœ¬
    echo "ğŸ¯ å®‰è£…Python 3.12å…¼å®¹çš„numpy..."; \
    pip install --no-cache-dir --root-user-action=ignore numpy>=1.26.0; \
    # å®‰è£…Pillow
    echo "ğŸ¯ å®‰è£…Pillow..."; \
    pip install --no-cache-dir --root-user-action=ignore Pillow>=10.0.0; \
    # éªŒè¯å®‰è£…
    python3 -c "import numpy as np; print('âœ… numpy version:', np.__version__, '- shape test:', np.array([1,2,3]).shape)"; \
    python3 -c "from PIL import Image; print('âœ… PILå¯¼å…¥æˆåŠŸ')"; \
    pip cache purge

# å¤åˆ¶requirements.txtå¹¶å®‰è£…å…¶ä»–Pythonä¾èµ–
COPY requirements.txt /tmp/requirements.txt
RUN set -eux; \
    # ä»requirements.txtä¸­æ’é™¤numpyå’ŒPillowï¼ˆå·²å®‰è£…ï¼‰
    grep -v "^numpy" /tmp/requirements.txt | grep -v "^Pillow" > /tmp/requirements_filtered.txt || echo "è¿‡æ»¤å®Œæˆ"; \
    echo "ğŸ“‹ å‰©ä½™ä¾èµ–ï¼š"; \
    cat /tmp/requirements_filtered.txt; \
    pip install --no-cache-dir --root-user-action=ignore -r /tmp/requirements_filtered.txt; \
    rm -rf /tmp/*; \
    pip cache purge; \
    # æœ€ç»ˆéªŒè¯ï¼šç¡®ä¿æ‰€æœ‰å…³é”®åŒ…éƒ½å¯ç”¨
    python3 -c "import numpy as np; import requests; import selenium; from PIL import Image; import sympy; print('âœ… æ‰€æœ‰å…³é”®ä¾èµ–éªŒè¯é€šè¿‡')"

# ä¸‹è½½ ARMv7 ç‰ˆæœ¬çš„ geckodriverï¼ˆlinux32ï¼‰
# æ­¤ Dockerfile ä¸“é—¨ç”¨äº ARMv7 æ¶æ„ï¼Œç›´æ¥ä¸‹è½½å¯¹åº”ç‰ˆæœ¬
RUN set -eux; \
    echo "ğŸ“¦ ä¸‹è½½ ARMv7 (linux32) ç‰ˆæœ¬çš„ geckodriver..."; \
    VER=v0.34.0; \
    URL="https://github.com/mozilla/geckodriver/releases/download/$VER/geckodriver-$VER-linux32.tar.gz"; \
    echo "ğŸ”— ä¸»URL: $URL"; \
    \
    # ä¸‹è½½ geckodriver
    wget -O /tmp/geckodriver.tgz "$URL" --retry-connrefused --tries=5 --timeout=30 || { \
        echo "âš ï¸  v0.34.0 ä¸‹è½½å¤±è´¥ï¼Œå°è¯• v0.33.0..."; \
        VER=v0.33.0; \
        URL="https://github.com/mozilla/geckodriver/releases/download/$VER/geckodriver-$VER-linux32.tar.gz"; \
        echo "ğŸ”„ å¤‡ç”¨URL: $URL"; \
        wget -O /tmp/geckodriver.tgz "$URL" --retry-connrefused --tries=3 --timeout=30; \
    }; \
    \
    # è§£å‹å®‰è£…
    tar -xzf /tmp/geckodriver.tgz -C /usr/local/bin/; \
    chmod +x /usr/local/bin/geckodriver; \
    \
    # éªŒè¯å®‰è£…
    echo "âœ… Geckodriver å®‰è£…å®Œæˆ"; \
    echo "ğŸ“‹ æ–‡ä»¶ä¿¡æ¯:"; \
    file /usr/local/bin/geckodriver 2>/dev/null || echo "  (fileå‘½ä»¤ä¸å¯ç”¨)"; \
    ls -lh /usr/local/bin/geckodriver; \
    \
    # æ¸…ç†
    rm -f /tmp/geckodriver.tgz; \
    echo "ğŸ‰ ARMv7 Geckodriver å®‰è£…å®Œæˆ"

# å¤åˆ¶åº”ç”¨ä»£ç 
COPY scripts/*.py /app/
RUN chown -R appuser:appuser /app

# åˆ‡æ¢åˆ°érootç”¨æˆ·
USER appuser

# å¥åº·æ£€æŸ¥ï¼ˆä¿®æ­£æ¨¡å—å¯¼å…¥ï¼‰
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD python3 -c "from ncc_matcher import NCCMatcher; print('NCC Health Check OK')" || exit 1

# å¯åŠ¨å‘½ä»¤
CMD ["python3", "main.py"]